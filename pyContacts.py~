#=Imports===
import csv

#=End Imports===

#=Major Variables===
contacts_array = []

#=End Variables===


#=Functions===

#Ugly first attempt at fetch and print on an existing file
def fetch_contacts(filename):
    contacts_file=csv.reader(open(filename))
    for row in contacts_file:
        contacts_array.append( row )
        for row in contacts_array:
            print row

def input_contact(name,number):
    contacts_array.append(name,number)

#=Start the program===
fetch_contacts("/home/trash/.contacts.csv")
input_contact("fake","8015555555")
print contacts_array

#=End===
